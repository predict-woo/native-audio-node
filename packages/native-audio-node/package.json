{
  "name": "native-audio-node",
  "version": "0.3.4",
  "description": "Native audio capture for Node.js - system audio and microphone recording (macOS & Windows)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "audio",
    "macos",
    "windows",
    "coreaudio",
    "wasapi",
    "microphone",
    "system-audio",
    "loopback",
    "recording",
    "capture",
    "native",
    "node-addon"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "os": [
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "optionalDependencies": {
    "@native-audio-node/darwin-arm64": "workspace:*",
    "@native-audio-node/darwin-x64": "workspace:*",
    "@native-audio-node/win32-x64": "workspace:*",
    "@native-audio-node/win32-arm64": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
