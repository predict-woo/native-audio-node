{
  "name": "native-audio-node-monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "Monorepo for native-audio-node packages",
  "type": "module",
  "scripts": {
    "build:native": "cmake-js compile",
    "build:native:debug": "cmake-js compile --debug",
    "rebuild": "cmake-js rebuild",
    "clean:native": "cmake-js clean",
    "build:ts": "pnpm --filter native-audio-node run build",
    "build": "pnpm run build:native && pnpm run copy-binary && pnpm run build:ts",
    "dev": "pnpm --filter native-audio-node run dev",
    "copy-binary": "node scripts/copy-binary.js",
    "publish:all": "pnpm -r publish --access public",
    "version:all": "pnpm -r exec npm version"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "cmake-js": "^7.3.0",
    "node-addon-api": "^8.3.0"
  },
  "engines": {
    "node": ">=20"
  }
}
