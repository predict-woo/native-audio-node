{
  "name": "coreaudio-node",
  "version": "0.1.0",
  "description": "Native macOS audio capture for Node.js - system audio and microphone recording",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "build/Release/"
  ],
  "scripts": {
    "install": "cmake-js compile",
    "build:native": "cmake-js compile",
    "build:native:debug": "cmake-js compile --debug",
    "rebuild": "cmake-js rebuild",
    "clean": "cmake-js clean",
    "build:ts": "tsup",
    "build": "npm run build:native && npm run build:ts",
    "dev": "tsup --watch",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "os": [
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "node-addon-api": "^8.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "cmake-js": "^7.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
